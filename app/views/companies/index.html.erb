<script src="//maps.google.com/maps/api/js?v=3.23&key=AIzaSyBawx0stcXYxQIkKqDEqCn992Qm5fZHFsA"></script>
<script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
<script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script> <!-- only if you need custom infoboxes -->
<div class="companies-index">
    <div class="brand">Who We Work With</div>
    <div class="address-bar">See Where Our Clients Work</div>
   <ol class="breadcrumb">
     <li><%= link_to "Home", root_path %></li>
   </ol>
    <div class="container">

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                  </div>

  <% @companies.each do |company| %>
  <i class="fa fa-arrow-circle-o-right" aria-hidden="true"></i>
    <%= link_to "#{company[:name]}'s activities", company_path(company)%>
  <% end %>
  <div class="col-md-8">
    <div class="gmap" style="width: 1200px;">
      <div id="map" style='width: 1000px; height: 600px;'></div>
    </div>
  </div>
    <div class="clearfix"></div>
</div>
</div>

<script type="text/javascript">
handler = Gmaps.build('Google');
handler.buildMap({
    provider: {
      disableDefaultUI: true
      // pass in other Google Maps API options here
    },
    internal: {
      id: 'map'
    }
  },
  function(){
    markers = handler.addMarkers((<%=raw @hash.to_json %>));
    handler.bounds.extendWith(markers);
    handler.fitMapToBounds();
  }
);
</script>
