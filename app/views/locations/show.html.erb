        </div>
        <div class="clearfix"></div>
    </div>
</div>

<div class="row">
    <div class="box">
        <div class="col-lg-12">
            <hr>
              <h2 class="intro-text text-center">Most Popular
                  <strong>Activities</strong>
              </h2>
              <hr>
          </div>

      <div class="locations">
        <% @location.items.each do |item| %>
      <div class="col-sm-4 text-center">
        <img class="img-responsive"> <%= image_tag(item[:image], width: "350", height: "210") %>
            <%= item[:name] %>
            <%= item[:location] %>
          </div>
        <% end %>
      </div>
  </div>
</div>
